@model ConstructionWarehouse_Web.Models.VM.SupplierProductDeleteVM

<form asp-action="DeleteSupplierProduct">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Удаление</h1>
        <hr />

        <input hidden asp-for="SupplierProduct.Id" />
        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="SupplierProduct.ProductId" class="control-label pt-2" style="font-size: 20px;">Товар</label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="SupplierProduct.ProductId" disabled class="form-select" asp-items="@Model.ProductList" style="width: 250px">
                    <option disabled selected>--Выбрать товар--</option>
                </select>
            </div>

            <div class="col-2">
                <label asp-for="SupplierProduct.SupplierId" class="control-label pt-2" style="font-size: 20px;">Производитель</label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="SupplierProduct.SupplierId" disabled class="form-select" asp-items="@Model.SupplierList" style="width: 250px">
                    <option disabled selected>--Выбрать производителя--</option>
                </select>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexSupplierProduct" asp-controller="SupplierProduct" class="btn-primary btn form-control">Назад</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Удалить" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}