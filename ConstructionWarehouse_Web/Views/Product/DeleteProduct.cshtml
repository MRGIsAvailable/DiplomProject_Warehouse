@model ConstructionWarehouse_Web.Models.VM.ProductDeleteVM

<form asp-action="DeleteProduct">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Удаление</h1>
        <hr />

        <input hidden asp-for="Product.Id" />
        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="Product.ProductName" class="control-label pt-2" style="font-size: 20px;">Наименование</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Product.ProductName" disabled class="from-control" />
            </div>

            <div class="col-2">
                <label asp-for="Product.Details" class="control-label pt-2" style="font-size: 20px;">Описание</label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Product.Details" disabled class="from-control" rows="3" style="width: 250px"></textarea>
            </div>

            <div class="col-2">
                <label asp-for="Product.CategoryID" class="control-label pt-2" style="font-size: 20px;">Категория</label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="Product.CategoryID" disabled class="form-select" asp-items="@Model.CategoryList" style="width: 250px">
                    <option disabled selected>--Выбрать категорию--</option>
                </select>
            </div>

            <div class="col-2">
                <label asp-for="Product.Price" class="control-label pt-2" style="font-size: 20px;">Цена</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Product.Price" disabled class="from-control" min="1" />
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexProduct" asp-controller="Product" class="btn-primary btn form-control">Назад</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Удалить" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}