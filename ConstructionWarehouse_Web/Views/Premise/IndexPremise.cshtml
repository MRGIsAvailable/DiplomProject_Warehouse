@model IEnumerable<ConstructionWarehouse_Web.Models.Dto.PremiseDTO>
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Помещения</h1>
        </div>
        <div class="cool text-end pt-1">
            <a asp-controller="Premise" asp-action="CreatePremise" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Добавить новое помещение</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Помещение
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.PremiseName</td>
                    <td>
                        <a asp-controller="Premise" asp-action="UpdatePremise" asp-route-premiseId="@item.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="Premise" asp-action="DeletePremise" asp-route-premiseId="@item.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>