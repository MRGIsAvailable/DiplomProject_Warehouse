@model IEnumerable<ConstructionWarehouse_Web.Models.Dto.UserDTO>
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Менеджеры</h1>
        </div>
        <div>
            <form method="get">
                <div class="form-inline form-group">
                    <input name="search" class="form-control" placeholder="Поиск" style="width: 350px" />
                    <br />
                    <input type="submit" value="Поиск/отмена" class="btn btn-success" />
                </div>
            </form>
        </div>
        <div class="cool text-end pt-1">
            <a asp-controller="User" asp-action="CreateUser" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Добавить менеджера</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    ФИО
                </th>
                <th>
                    Роль
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FullName</td>
                    <td>@item.UserRole</td>
                    <td>
                        <a asp-controller="User" asp-action="UpdateUser" asp-route-userId="@item.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="User" asp-action="DeleteUser" asp-route-userId="@item.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>>